<script>
  $('.carousel').carousel()
</script>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-top: 120px;">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>

  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%=image_tag 'banner1.jpg', class: "d-block w-100", alt: "First slide" %>
    </div>
    <div class="carousel-item">
      <%=image_tag 'banner2.jpg', class: "d-block w-100", alt: "Second slide"%>
    </div>
    <div class="carousel-item">
      <%=image_tag 'banner3.jpg', class: "d-block w-100", alt: "Third slide" %>
    </div>
    <div class="carousel-item">
      <%=image_tag 'banner5.jpg', class: "d-block w-100", alt: "Fourth slide" %>
    </div>
    <div class="carousel-item">
      <%=image_tag 'banner6.jpg', class: "d-block w-100", alt: "Fifth slide" %>
    </div>
    <div class="carousel-item">
      <%=image_tag 'banner7.jpg', class: "d-block w-100", alt: "Sixth slide" %>
    </div>
    <div class="carousel-item">
      <%=image_tag 'banner8.jpg', class: "d-block w-100", alt: "Seventh slide" %>
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



